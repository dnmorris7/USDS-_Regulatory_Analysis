{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "maven: compile",
            "type": "shell",
            "command": "mvn compile",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$javac"
        },
        {
            "label": "maven: clean compile",
            "type": "shell",
            "command": "mvn clean compile",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$javac"
        },
        {
            "label": "maven: spring-boot:run",
            "type": "shell",
            "command": "mvn spring-boot:run",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Scanning for projects.*",
                    "endsPattern": "^.*Started.*Application.*"
                }
            }
        },
        {
            "label": "maven: package",
            "type": "shell",
            "command": "mvn clean package -DskipTests",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}